              <div class="posts">
                <a href="/userpic/<%=val._id%>">
                  <div class="card card_small">
                    <img src="../images/uploads/<%=val.image%>" alt="">
                  </div>
                </a>
                <div class="top">
                  <a href="">profile<i class="ri-arrow-drop-down-line"></i></a>
                  <a href="/save/<%=val._id%>">
                    <%if(fu.savepost.find(i => val._id.toString() === i._id.toString())){%>
                      <button>Unsave</button>
                      <%} else{%>
                      <button>Save</button>
                      <%}%>
                  </a>                
                </div>
                <div class="overlay">
                  
                  
                </div>
                <div class="down">
                  <div class="site">dribble</div>
                  <i class="ri-upload-line"></i>
