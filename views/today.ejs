  </body>
  <script>
    
var sidebar = document.querySelector('.sidebar')
var arrowlft = document.querySelector('#arrowlft')


var flag = true
arrowlft.addEventListener('click', function(){
    if(flag){
        sidebar.style.display = "none"
        flag = false
    }
    else{
        sidebar.style.display = "initial"
        flag = true
    }
})

  </script>
